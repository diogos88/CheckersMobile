@using System.Web.Mvc.Ajax;


@{
    ViewBag.Title = "Board";
}

<h2>Board</h2>

Controller message: @ViewBag.message

<div id="div-board"></div>


@using (Ajax.BeginForm("StartNewGame", new AjaxOptions
{
    OnComplete = "InitBoard"
}))
{
    <input id="btn-newgame" type="submit" value="New game" />
}

<script>

    function InitBoard(data) {
        $("#div-board").html(data.responseText);
    }

</script>